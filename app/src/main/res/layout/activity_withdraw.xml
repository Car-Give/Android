<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feat.profile.WithdrawActivity">
    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:clipToOutline="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Auto layout, variables, and unit scale are not yet supported -->
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/frame_40078"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:clipToOutline="true">
            <!-- Auto layout, variables, and unit scale are not yet supported -->
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/back"
                android:clipToOutline="true" />
            <!-- Auto layout, variables, and unit scale are not yet supported -->

        </RelativeLayout>

        <TextView
            android:id="@+id/some_id"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|top"
            android:text="회원탈퇴"
            android:textAppearance="@style/some_id"
            android:textStyle="bold" />

    </RelativeLayout>
    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="탈퇴 안내"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="36dp"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/t"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/t"
        android:text="*회원 탈퇴 전 주의 사항을 꼭 읽기를 당부드립니다*"
        android:textColor="@color/red"
        />
    <ImageView
        android:id="@+id/d"
        android:layout_width="4dp"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/t"
        app:layout_constraintLeft_toLeftOf="@id/t"
        android:background="@drawable/dot"
        android:layout_marginTop="95dp"
        />

    <TextView
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:text="현재 사용하고 계신 아이디는 탈퇴시 재사용 및 복구가 불가능합니다"
        app:layout_constraintLeft_toRightOf="@id/d"
        app:layout_constraintTop_toTopOf="@id/d"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/d2"
        android:layout_width="4dp"
        android:layout_height="4dp"
        android:layout_marginTop="59dp"
        android:background="@drawable/dot"
        app:layout_constraintLeft_toLeftOf="@id/t"
        app:layout_constraintTop_toBottomOf="@id/d" />
    <TextView
        android:id="@+id/bottom_msg"
        android:layout_width="280dp"
        android:layout_height="49dp"
        android:layout_marginLeft="12dp"
        android:text="탈퇴 후 회원정보 및 개인 서비스 이용기록은 모두 삭제됩니다."
        app:layout_constraintLeft_toRightOf="@id/d2"
        app:layout_constraintTop_toTopOf="@id/d2"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="251dp"
        android:layout_height="101dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/withdraw_msg"
        app:layout_constraintTop_toBottomOf="@id/bottom_msg"
        android:layout_marginTop="24dp"/>
    <ImageView
        android:id="@+id/withdraw_btn"
        android:layout_width="336dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/withdraw_gray"
        android:layout_marginBottom="20dp"/>
    <CheckBox
        app:layout_constraintBottom_toTopOf="@id/withdraw_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/withdraw_check"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="안내 사항을 모두 확인하였으며 이에 동의합니다"
        android:textSize="12sp"
        />









</androidx.constraintlayout.widget.ConstraintLayout>